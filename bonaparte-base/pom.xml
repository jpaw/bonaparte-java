<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.jpaw</groupId>
    <artifactId>bonaparte-base</artifactId>
    <version>1.2.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>BONAPARTE common configuration (parent pom)</name>
    <description>Common configuration settings for all BONAPARTE projects</description>
    <url>http://www.jpaw.de/projects/bonaparte/index.html</url>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- define releases we want to use, to ensure consistency -->
        <bonaparte.version>1.2.1-SNAPSHOT</bonaparte.version>
        <bonaparte-plugin-version>1.2.1-SNAPSHOT</bonaparte-plugin-version>
        <slf4j.version>1.6.6</slf4j.version>
        <logback.version>1.0.9</logback.version>
    </properties>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <organization>
        <name>Michael Bischoff</name>
        <url>http://www.jpaw.de</url>
    </organization>
    <developers>
        <developer>
            <id>mbi</id>
            <name>Michael Bischoff</name>
            <email>jpaw@online.de</email>
            <url>http://www.jpaw.de</url>
        </developer>
    </developers>

    <distributionManagement>
        <snapshotRepository>
            <id>repo-snapshots</id>
            <name>repo-snapshots</name>
            <url>${repo.url}/libs-snapshot-local</url>
        </snapshotRepository>
        <repository>
            <id>repo-releases</id>
            <name>repo-releases</name>
            <url>${repo.url}/libs-release-local</url>
        </repository>
    </distributionManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.8.1</version>
                <configuration>
                    <charset>UTF-8</charset>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.8.1</version>
                <configuration>
                    <charset>UTF-8</charset>
                </configuration>
            </plugin>
        </plugins>
    </reporting>

    <modules>
        <module>../bonaparte-core/modules/all/pom.xml</module>
        <module>../bonaparte-core-test/modules/all/pom.xml</module>
        <module>../bonaparte-demorqrs/modules/all/pom.xml</module>
        <module>../bonaparte-netty/pom.xml</module>
        <module>../bonaparte-netty-test/pom.xml</module>
        <module>../bonaparte-akka/pom.xml</module>
        <module>../bonaparte-camel/pom.xml</module>
        <module>../bonaparte-mina-test/pom.xml</module>
        <module>../bonaparte-hornetq-test/pom.xml</module>
        <module>../bonaparte-vertx/pom.xml</module>
    </modules>

</project>

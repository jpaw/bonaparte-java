<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.jpaw</groupId>
    <artifactId>bonaparte-base</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>BONAPARTE common configuration (parent pom)</name>
    <description>Common configuration settings for all BONAPARTE projects</description>
    <url>http://www.jpaw.de/projects/bonaparte/index.html</url>

    <modules>
        <module>../bonaparte-core/generator/pom.xml</module>
        <module>../bonaparte-core/pom.xml</module>

        <module>../bonaparte-core-test/generator/pom.xml</module>
        <module>../bonaparte-core-test/pom.xml</module>

        <module>../bonaparte-demorqrs/generator/pom.xml</module>
        <module>../bonaparte-demorqrs/pom.xml</module>

        <module>../bonaparte-netty/pom.xml</module>

        <module>../bonaparte-netty-test/generator/pom.xml</module>
        <module>../bonaparte-netty-test/pom.xml</module>

        <module>../bonaparte-camel/pom.xml</module>

        <module>../bonaparte-vertx/pom.xml</module>
    </modules>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- define releases we want to use, to ensure consistency -->
        <bonaparte.version>1.0-SNAPSHOT</bonaparte.version>
        <slf4j.version>1.6.6</slf4j.version>
    </properties>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <organization>
        <name>Michael Bischoff</name>
        <url>http://www.jpaw.de</url>
    </organization>
    <developers>
        <developer>
            <id>mbi</id>
            <name>Michael Bischoff</name>
            <email>jpaw@online.de</email>
            <url>http://www.jpaw.de</url>
        </developer>
    </developers>

    <pluginRepositories>
        <pluginRepository>
            <id>xtend.plugin.repository</id>
            <name>Xtend2 Plugin Repository</name>
            <url>http://build.eclipse.org/common/xtend/maven/</url>
        </pluginRepository>
        <pluginRepository>
            <id>fornax.plugin.repository</id>
            <name>Fornax Plugin Repository</name>
            <url>http://www.fornax-platform.org/m2/repository</url>
        </pluginRepository>
    </pluginRepositories>

    <repositories>
        <repository>
            <id>maven.eclipse.org</id>
            <url>
      http://maven.eclipse.org/nexus/content/groups/public/</url>
        </repository>
        <repository>
            <id>xtend.repository</id>
            <name>Xtend Repository</name>
            <url>http://build.eclipse.org/common/xtend/maven/</url>
        </repository>
        <repository>
            <id>xtext</id>
            <url>
      http://build.eclipse.org/common/xtext/maven/maven-snapshot/final/</url>
        </repository>
        <repository>
            <id>fornax.repository</id>
            <name>Fornax Repository</name>
            <url>http://www.fornax-platform.org/m2/repository</url>
        </repository>
    </repositories>

    <profiles>
        <profile>
            <id>kreios</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <distributionManagement>
                <repository>
                    <id>kreios-ast-snapshots</id>
                    <name>Bonaparte Snapshots</name>
                    <url>
                    http://nexus.kreios.lu/nexus/content/repositories/ast-snapshots/</url>
                </repository>
            </distributionManagement>
            <repositories>
                <repository>
                    <id>kreios-ast-snapshots</id>
                    <name>Bonaparte Snapshots</name>
                    <url>
      http://nexus.kreios.lu/nexus/content/repositories/ast-snapshots/</url>
                </repository>
            </repositories>
        </profile>
        <profile>
            <id>jpaw</id>
            <distributionManagement>
                <snapshotRepository>
                    <id>repo-snapshots</id>
                    <name>repo-snapshots</name>
                    <url>${repo.url}/libs-snapshot-local</url>
                </snapshotRepository>
                <repository>
                    <id>repo-releases</id>
                    <name>repo-releases</name>
                    <url>${repo.url}/libs-release-local</url>
                </repository>
            </distributionManagement>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.5.1</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.8.1</version>
                <configuration>
                    <charset>UTF-8</charset>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.8.1</version>
                <configuration>
                    <charset>UTF-8</charset>
                </configuration>
            </plugin>
        </plugins>
    </reporting>

    <dependencies>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${slf4j.version}</version>
        </dependency>
    </dependencies>
</project>
